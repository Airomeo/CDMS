<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@string/fees_from_address"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintBottom_toBottomOf="@id/from"
            app:layout_constraintEnd_toStartOf="@id/from"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/from" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/from"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFrom"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:id="@+id/fromMenu"
                android:hint="@string/fees_from_address"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:textIsSelectable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_swap_vert_24"
            app:layout_constraintBottom_toBottomOf="@id/to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/from" />

        <ImageView
            android:id="@+id/ivTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@string/fees_to_address"
            android:src="@drawable/ic_baseline_person_pin_circle_24"
            app:layout_constraintBottom_toBottomOf="@id/to"
            app:layout_constraintEnd_toStartOf="@id/to"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/to" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/to"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTo"
            app:layout_constraintTop_toBottomOf="@id/from">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:id="@+id/toMenu"
                android:hint="@string/fees_to_address"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:textIsSelectable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/ivGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@string/goods_weight"
            android:src="@drawable/ic_baseline_description_24"
            app:layout_constraintBottom_toBottomOf="@id/goodsWeight"
            app:layout_constraintEnd_toStartOf="@id/goodsWeight"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/goodsWeight" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/goodsWeight"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:hint="@string/goods_weight"
            app:layout_constraintEnd_toStartOf="@id/weightMinus"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/ivGoods"
            app:layout_constraintTop_toBottomOf="@id/to"
            app:suffixText="kg">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/tvGoodsWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:selectAllOnFocus="true"
                android:text="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.chip.Chip
            android:id="@+id/weightMinus"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="重量减1"
            android:text="-1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/goodsWeight"
            app:layout_constraintEnd_toStartOf="@id/weightPlus"
            app:layout_constraintStart_toEndOf="@id/goodsWeight"
            app:layout_constraintTop_toTopOf="@id/goodsWeight" />

        <com.google.android.material.chip.Chip
            android:id="@+id/weightPlus"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:contentDescription="重量加1"
            android:text="+1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/goodsWeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/weightMinus"
            app:layout_constraintTop_toTopOf="@id/goodsWeight" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fees_tips"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goodsWeight" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/goodsWeight" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
