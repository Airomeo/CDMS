<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/fragment_horizontal_margin"
    android:paddingVertical="@dimen/fragment_vertical_margin">

    <TextView
        android:id="@+id/tvFirstWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/config_first_weight"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/material_on_surface_emphasis_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sldFirstWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="0.5"
        android:valueFrom="0"
        android:valueTo="1.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstWeight" />

    <TextView
        android:id="@+id/tvFirstCommission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_first_commission"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/material_on_surface_emphasis_medium"
        app:layout_constraintStart_toStartOf="@+id/tvFirstWeight"
        app:layout_constraintTop_toBottomOf="@+id/sldFirstWeight" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sldFirstCommission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="0.1"
        android:valueFrom="0"
        android:valueTo="1.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstCommission" />

    <TextView
        android:id="@+id/tvAddCommission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_add_commission"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/material_on_surface_emphasis_medium"
        app:layout_constraintStart_toStartOf="@+id/tvFirstWeight"
        app:layout_constraintTop_toBottomOf="@+id/sldFirstCommission" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sldAddCommission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="0.1"
        android:valueFrom="0"
        android:valueTo="1.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddCommission" />
</androidx.constraintlayout.widget.ConstraintLayout>